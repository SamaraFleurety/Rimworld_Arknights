		<defName>AK_Thought_Trait_Kjera</defName>
		<requiredTraits><li>AK_Trait_Kjera</li></requiredTraits>
		<stages>
			<li>
				<label></label>
				<description></description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
